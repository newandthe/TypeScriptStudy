{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "dist",
    "strict": true,             // strictNullChecks 의 상위 옵션
    // "strictNullChecks": false,  // 엄격한 NULL 검사 (default: true)
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}